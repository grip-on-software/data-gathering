[Unit]
Description=GROS agent gatherer daemon
After=network.target
Requires=pyro-ns.service

[Service]
ExecStart=/usr/local/envs/controller/bin/python /usr/local/bin/gatherer-daemon.py
WorkingDirectory=/srv/data-gathering
Type=simple
User=gatherer
Group=controller
Environment=PYRO_LOGLEVEL=INFO PYRO_LOGFILE={stderr}
Restart=always
RestartSec=30s

[Install]
WantedBy=multi-user.target
