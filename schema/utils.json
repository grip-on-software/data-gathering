{
    "$id": "https://gros.liacs.nl/schema/data-gathering/utils.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Data gathering utilities",
    "$ref": "#/$defs/datetime",
    "$defs": {
        "boolean": {
            "type": "string",
            "enum": ["0", "1"]
        },
        "jira_boolean": {
            "type": "string",
            "enum": ["-1", "1"]
        },
        "positive_integer": {
            "type": "string",
            "pattern": "^\\d+$"
        },
        "integer": {
            "type": "string",
            "pattern": "^-?\\d+$"
        },
        "positive_float": {
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)?$"
        },
        "float": {
            "type": "string",
            "pattern": "^-?\\d+(\\.\\d+)?$"
        },
        "datetime": {
            "type": "string",
            "format": "date-time",
            "pattern": "^\\d\\d\\d\\d-\\d\\d-\\d\\d \\d\\d:\\d\\d:\\d\\d$"
        },
        "jira_project": {
            "type": "string",
            "pattern": "^[A-Z]+$"
        },
        "jira_issue": {
            "type": "string",
            "pattern": "^[A-Z]+-\\d+$"
        },
        "version": {
            "type": "string",
            "pattern": "^[a-f0-9]+$"
        }
    }
}
